cc_library_headers {
    name: "libcld80211_headers",
    vendor_available: true,
    export_include_dirs: ["."],
}

cc_library_shared {
    name: "libcld80211",
    vendor_available: true,
    header_libs: ["libcld80211_headers"],
    shared_libs: [
        "libcutils",
        "libnl",
        "liblog",
    ],
    srcs: ["cld80211_lib.c"],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
    ],
}
